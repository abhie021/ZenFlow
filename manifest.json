{
  "manifest_version": 3,
  "name": "ZenFlow",
  "version": "2.0",
  "description": "An advanced blocker to enhance focus with timers, scheduling, and statistics.",
  "permissions": [
    "storage",
    "tabs",
    "alarms"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup.html"
  },
  "options_page": "options.html",
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}